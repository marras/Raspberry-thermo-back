= javascript 'dygraph-combined-dev'

%h1.title
  Microscopy lab temperature

.row
  - current_temps.each_with_index do |pair, i|
    - name, temp = pair
    - cls = "t#{i+1}"
    .temp-box
      %h4
        %span.name{class: cls} #{name}:
        %br
        %span.temp{class: cls}= temp

%h2 History

%p Select time range:

#graphdiv

:javascript
  g = new Dygraph(
    document.getElementById("graphdiv"),
    "/data",
    {
      colors: ["#FF0000", "#00FF00", "#0000FF"]
    }
  );
